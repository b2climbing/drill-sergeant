<h2>Step 1</h2>
<% form_for(@sequence) do |f| %>
  <fieldset>
    <legend>Add sequence</legend>
    <%= f.error_messages %> 
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %> 
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div> 
        <%= f.submit "Create" %> 
    </div>
  </fieldset>
<% end %>